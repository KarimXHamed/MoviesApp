func fetchQuote() {
        // Define the URL for the GitHub API
        let token = "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"
        let url = URL(string: "https://raw.githubusercontent.com/vinitshahdeo/inspirational-quotes/master/data/data.json")!

        // Define the headers for the request
        var request = URLRequest(url: url, cachePolicy: .useProtocolCachePolicy)
        request.httpMethod = "GET"
        request.setValue("Bearer \(token)", forHTTPHeaderField: "Authorization")
        
        // Make the request
        let task = URLSession.shared.dataTask(with: request) { data, response, error in
            if let error = error {
                print("Error making request: \(error)")
                return
            }
            
            guard let data = data else {
                print("No data returned")
                return
            }
            //remove the BOM
            guard let jsonString = String(data:data , encoding: .utf8)else{
                print("unable to convert data to string")
                return
            }
            let bomRemovedString = jsonString.replacingOccurrences(of: "\u{FEFF}", with: "")
            print("\(bomRemovedString)")
            
            // Parse the JSON data
            do {
                let quotes = try JSONDecoder().decode([QouteModel].self, from: bomRemovedString.data(using: .utf8)!)
                self.currentQoute=quotes
                
            } catch {
                print("Error parsing JSON: \(error)")
            }
        }
        
        // Handle the response
        task.resume()
    }
