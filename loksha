func fetchPoint(completion: @escaping (Point?, Error?) -> Void) {
    let db = Firestore.firestore()
    
    // Fetch a specific document from the "LanguageModel" collection
    db.collection("LanguageModel").document("uCzYXWNRBlPlPWS3oewF").getDocument { (document, error) in
        if let error = error {
            print("Error getting document: \(error)")
            completion(nil, error)
        } else {
            guard let document = document, document.exists else {
                print("Document does not exist")
                completion(nil, nil)
                return
            }
            do {
                // Decode the document data into a Point object
                let point = try document.data(as: Point.self)
                completion(point, nil)
            } catch {
                print("Error decoding document: \(error)")
                completion(nil, error)
            }
        }
    }
}
