func fetchAllLanguageModels(completion: @escaping ([LanguageModel]?) -> Void) {
    let db = Firestore.firestore()
    let collectionRef = db.collection("LanguageModel")
    
    collectionRef.getDocuments { (querySnapshot, error) in
        if let error = error {
            print("Error fetching language models: \(error)")
            completion(nil)
            return
        }
        
        let languageModels: [LanguageModel] = querySnapshot?.documents.compactMap { document in
            try? document.data(as: LanguageModel.self)
        } ?? []
        
        completion(languageModels)
    }
}
