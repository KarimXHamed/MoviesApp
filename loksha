  override func viewDidLoad() {
        super.viewDidLoad()
        
        // Initialize the Supabase client
        client = SupabaseClient(supabaseURL: supabaseURL, supabaseKey: supabaseKey)
        
        // Fetch data from Supabase
        fetchLanguageModels { result in
            switch result {
            case .success(let models):
                print("Fetched models: \(models)")
                // Update your UI or data source here
            case .failure(let error):
                print("Error fetching models: \(error)")
            }
        }
    }

    func fetchLanguageModels(completion: @escaping (Result<[LanguageModel], Error>) -> Void) {
        // Query the 'language_models' table
        client
            .from("language_models")
            .select()
            .execute { result in
                switch result {
                case .success(let response):
                    do {
                        // Decode the response data into LanguageModel array
                        if let data = response.data {
                            let models = try JSONDecoder().decode([LanguageModel].self, from: data)
                            completion(.success(models))
                        } else {
                            completion(.failure(NSError(domain: "SupabaseError", code: -1, userInfo: [NSLocalizedDescriptionKey: "No data returned"])))
                        }
                    } catch {
                        completion(.failure(error))
                    }
                case .failure(let error):
                    completion(.failure(error))
                }
            }
    }
}
