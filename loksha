import FirebaseFirestore

func storeLanguageModel(languageModel: LanguageModel) {
    let db = Firestore.firestore()
    let docRef = db.collection("languageModels").document("myLanguageModel")

    do {
        let data = try JSONEncoder().encode(languageModel)
        try docRef.setData(data, merge: true)
        print("Language model stored successfully!")
    } catch {
        print("Error storing language model: \(error)")
    }
}
